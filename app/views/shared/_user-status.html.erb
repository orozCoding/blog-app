<div class="user-status-container d-flex col">
  <%= render 'shared/devise-flashes' %>
  <% if user_signed_in? %>
    <p> Welcome <%=current_user.name %></p>
    <%= button_to "Sign out", destroy_user_session_path, :method => :delete  %>
  <% else %>
    <%= button_to 'Log In', "/users/sign_in" %>
  <% end %>
  <% if User.all.empty?  ||  User.all.nil? %>
    <p> There are no users </p>
  <%end%>
</div>
